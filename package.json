{
  "name": "knotta-lsp-vscode-ext",
  "version": "1.0.0",
  "description": "VSCode extension for knotta lsp client",
  "main": "dist/index.js",
  "engines": {
    "vscode": "^1.94.0"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "activationEvents": [
    "onLanguage:knotta"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "knottaLspClient.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "knottaLspClient.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "knotta",
        "extensions": [
          ".knotta"
        ]
      }
    ]
  },
  "scripts": {
    "build": "tsx build-scripts/build.ts",
    "watch": "tsx build-scripts/watch.ts",
    "start": "node dist",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish"
  },
  "publisher": "coder-ka",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coder-ka/knotta-lsp.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coder-ka/knotta-lsp/issues"
  },
  "homepage": "https://github.com/coder-ka/knotta-lsp#readme",
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/vscode": "^1.94.0",
    "@vscode/vsce": "^3.1.1",
    "chokidar": "^4.0.1",
    "esbuild": "^0.15.15",
    "knotta-lsp-server": "^1.0.0",
    "tsx": "^4.19.1"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
